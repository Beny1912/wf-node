{
  "name": "wf-node",
  "version": "1.0.0",
  "description": "Challenge to wefox Architect Lead offer",
  "main": "./dist/index.js",
  "bin": "./dist/index.js",
  "scripts": {
    "preinstall": "node ./npm-scripts/preinstall.js",
    "prestart": "node ./npm-scripts/prestart.js pro",
    "start": "node .",
    "start-dev": "node ./npm-scripts/prestart.js dev && nodemon ./src/index.ts",
    "start-pro": "node ./npm-scripts/prestart.js pro && nodemon ./src/index.ts",
    "build": "tsc",
    "test": "jest --passWithNoTests",
    "lint": "eslint \"./src/**/*.ts\"",
    "prepack": "node ./npm-scripts/prestart.js pro && tsc",
    "pack": "pkg .",
    "postpack": "node ./npm-scripts/postpack.js "

  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Beny1912/wf-node.git"
  },
  "author": "Beny Pe√±a",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Beny1912/wf-node/issues"
  },
  "homepage": "https://github.com/Beny1912/wf-node#readme",
  "devDependencies": {
    "eslint": "^8.6.0",
    "nodemon": "^2.0.15",
    "ts-node": "^10.4.0",
    "typescript": "^4.5.4"
  },
  "dependencies": {
    "@types/express": "^4.17.13",
    "express": "^4.17.2"
  },
  "pkg": {
    "targets": [
      "node14-win-x64"
    ],
    "assets": [
      ".env",
      "./dist/**/*",
      "./libs/**/*",
      "./node_modules/**/*"
    ]
  },
  "nodemonConfig": {
    "watch": [
      "src"
    ],
    "ext": "ts",
    "ignore": [
      "*.test.ts"
    ],
    "delay": "3",
    "execMap": {
      "ts": "ts-node"
    }
  },
  "jest": {
    "preset": "ts-jest",
    "coverageDirectory": "../coverage",
    "testEnvironment": "node",
    "testPathIgnorePatterns": [
      "libs",
      "node_modules"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint && npm run test"
    }
  }

}
